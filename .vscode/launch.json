{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Code Review (Git Mode - Test Repo)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "--repo",
                "/Users/wangyue/Code/CodeReviewData/ReviewDataset/sentry-greptile",
                "--base",
                "master",
                "--head",
                "performance-enhancement-complete"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Code Review (Git Mode - Custom)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "--repo",
                "${input:repoPath}",
                "--base",
                "${input:baseBranch}",
                "--head",
                "${input:headBranch}"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Code Review (Diff File Mode)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "--repo",
                "${input:repoPath}",
                "--diff",
                "${input:diffFile}"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Code Review (Test Repo - Diff File)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "--repo",
                "/Users/wangyue/Code/CodeReviewData/ReviewDataset/sentry-greptile",
                "--diff",
                "${input:diffFilePath}"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ],
    "inputs": [
        {
            "id": "repoPath",
            "type": "promptString",
            "description": "Enter repository path",
            "default": "./project"
        },
        {
            "id": "baseBranch",
            "type": "promptString",
            "description": "Enter base branch (e.g., main, master)",
            "default": "main"
        },
        {
            "id": "headBranch",
            "type": "promptString",
            "description": "Enter head branch or commit",
            "default": "HEAD"
        },
        {
            "id": "diffFile",
            "type": "promptString",
            "description": "Enter path to diff file",
            "default": "./sample.diff"
        },
        {
            "id": "diffFilePath",
            "type": "promptString",
            "description": "Enter path to diff file (relative to repo or absolute)",
            "default": "./changes.diff"
        }
    ]
}
